#
# OpenSSL configuration file for generating a self-signed certificate for XMPP
#

HOME			= .
RANDFILE		= $ENV::HOME/.rnd
oid_section		= new_oids

[ new_oids ]
id-on-xmppAddr		= 1.3.6.1.5.5.7.8.5

[ req ]
default_bits		= 1024
default_keyfile 	= key.pem
distinguished_name	= req_distinguished_name
x509_extensions		= v3_selfsign

string_mask = nombstr

[ req_distinguished_name ]
countryName		= Country Name (2 letter code)
countryName_min		= 2
countryName_max		= 2

stateOrProvinceName	= State or Province Name (full name)

localityName		= Locality Name (eg, city)

organizationName	= Organization Name (eg, company)

organizationalUnitName	= Organizational Unit Name (eg, section)

commonName		= Common Name (domain of the server)
commonName_max		= 64

id-on-xmppAddr		= XMPP-address of the server (domain again)
id-on-xmppAddr_max	= 64

emailAddress		= Email Address (of the server admin)
emailAddress_max	= 64

[ v3_selfsign ]
basicConstraints	= CA:FALSE
